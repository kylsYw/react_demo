{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "15.0",
      "flowVersion": "0.53"
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      1,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      1,
      "single"
    ],
    "react/prop-types": 0,
    "semi": 1,
    "accessor-pairs": 2,
    "curly": [1, "all"],
    "no-caller": 2,
    "no-eval": 1,
    "no-floating-decimal": 2,
    "no-lone-blocks": 2,
    "no-new": 2,
    "no-undefined": 2,
    "arrow-spacing": [1, { "before": true, "after": true }],
    "generator-star-spacing": [2, { "before": false, "after": true }],
    "no-var": 2,
    "default-case": 2,
    "eqeqeq": 2,
    "no-alert": 2,
    "no-else-return": 2,
    "no-extra-bind": 2,
    "no-invalid-this": 0,
    "no-new-wrappers": 2,
    "yoda": 2,
    "constructor-super": 2,
    "no-useless-rename": 2,
    "no-useless-constructor": 2,
    "prefer-const": 1,
    "require-yield": 2,
    "camelcase": 2,
    "comma-spacing": [2, {
      "before": false,
      "after": true
    }],
    "eol-last": 2,
    "id-length": [2, {
      "min": 1,
      "max": 40
    }],
    "no-fallthrough": 1,
    "no-invalid-regexp": 2,
    "comma-dangle": [1, "never"],
    "no-self-compare": 2,
    "new-cap": [2, {
      "newIsCap": true,
      "capIsNew": false
    }],
    "new-parens": 2,
    "no-array-constructor": 1,
    "jsx-quotes": [2, "prefer-single"],
    "max-len": [1, 300],
    "max-statements": [1, 200],
    "space-before-function-paren": [2, {"anonymous": "never","named": "never","asyncArrow": "always"}],
    "arrow-body-style": 2,
    "arrow-parens": 2,
    "no-duplicate-imports": 1,
    "yield-star-spacing": 2,
    "no-mixed-spaces-and-tabs": 2,
    "react/boolean-prop-naming": [2, {
      "propTypeNames": ["bool", "mutuallyExclusiveTrueProps"],
      "rule": "^is|has[A-Z]([A-Za-z0-9]?)+"
    }],
    "react/no-string-refs": 0
  }
}
